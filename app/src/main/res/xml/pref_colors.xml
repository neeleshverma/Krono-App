        app:viewSize="large"
        app:numColumns="6"
        app:showDialog="true" />
    <com.kizitonwose.colorpreference.ColorPreference
        android:defaultValue="@color/tutorials"
        android:key="color_tutorial"
        android:title="Tutorial"
        app:colorShape="circle"
        app:colorChoices="@array/color_choices"
        app:viewSize="large"
        app:numColumns="6"
        app:showDialog="true" />
