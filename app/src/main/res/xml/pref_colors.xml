<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <com.kizitonwose.colorpreference.ColorPreference
        android:defaultValue="@color/classes"
        android:key="color_classe"
        android:title="Class"
        app:colorShape="circle"
        app:colorChoices="@array/color_choices"
        app:viewSize="large"
        app:numColumns="6"
        app:showDialog="true" />

    <com.kizitonwose.colorpreference.ColorPreference
        android:defaultValue="@color/exams"
        android:key="color_exam"
        android:title="Exam"
        app:colorShape="circle"
        app:colorChoices="@array/color_choices"
        app:viewSize="large"
        app:numColumns="6"
        app:showDialog="true" />

    <com.kizitonwose.colorpreference.ColorPreference
        android:defaultValue="@color/events"
        android:key="color_event"
        android:title="Event"
        app:colorShape="circle"
        app:colorChoices="@array/color_choices"
        app:viewSize="large"
        app:numColumns="6"
        app:showDialog="true" />

    <com.kizitonwose.colorpreference.ColorPreference
        android:defaultValue="@color/deadlines"
        android:key="color_deadline"
        android:title="Deadline"
        app:colorShape="circle"
        app:colorChoices="@array/color_choices"
        app:viewSize="large"
        app:numColumns="6"
        app:showDialog="true" />

    <com.kizitonwose.colorpreference.ColorPreference
        android:defaultValue="@color/reminders"
        android:key="color_reminder"
        android:title="Reminder"
        app:colorShape="circle"
        app:colorChoices="@array/color_choices"
        app:viewSize="large"
        app:numColumns="6"
        app:showDialog="true" />
    <com.kizitonwose.colorpreference.ColorPreference
        android:defaultValue="@color/labs"
