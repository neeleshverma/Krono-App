        android:defaultValue="@color/holidays"
        android:key="color_holiday"
        android:title="Holiday"
        app:colorShape="circle"
        app:colorChoices="@array/color_choices"
        app:viewSize="large"
        app:numColumns="5"
        app:showDialog="true" />
    <Preference
        android:title="Update"
        android:summary="Click here to update the colors!">

        <intent
            android:action="android.intent.action.VIEW"
            android:targetPackage="com.example.leo.krono"
            android:targetClass="com.example.leo.krono.misc.UpdateActivity"
            />

    </Preference>
</PreferenceScreen>
